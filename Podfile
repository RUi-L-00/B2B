source 'https://github.com/CocoaPods/Specs.git'
platform :ios, "9.0"

target 'JMBaseProject' do
    #网络
    pod 'AFNetworking'
    #progress
    pod 'MBProgressHUD'
    #下拉刷新
    pod 'MJRefresh'
    #图片网络加载
    pod 'SDWebImage'
    #autolayout
    pod 'Masonry'
    #UITextView带Placeholder
    pod 'UITextView+Placeholder'
    #键盘
    pod 'IQKeyboardManager'
    #自定义navigationbar手势
    pod 'FDFullscreenPopGesture'
    #封装了一些常用的方法（使用分类）
    pod 'YYCategories'
    # 网络监控
    pod 'Reachability'
    
    #---------------友盟
    #依赖库
    pod 'UMCCommon'
    #统计
    pod 'UMCAnalytics'
    # 集成微信(精简版0.2M)
    pod 'UMCShare/Social/ReducedWeChat'
    # 集成QQ/QZone/TIM(精简版0.5M)
    pod 'UMCShare/Social/ReducedQQ'
    # 集成新浪微博(精简版1M)
    pod 'UMCShare/Social/ReducedSina'
    
    #微信支付
    pod 'WechatOpenSDK', '~> 1.7.0'
    #图片，视频，拍摄选择器
    pod 'TZImagePickerController'
    #数模转换
    pod 'MJExtension'
    #----------------------------------
    #轮播图
    pod 'SDCycleScrollView'
    # 首页页面切换
    pod 'WMPageController'
    #时间
    pod 'DateTools'
    
end
